# EditorConfig for QuartoBook
# https://editorconfig.org

root = true

# Defaults for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Markdown files
[*.{md,qmd}]
indent_size = 2
trim_trailing_whitespace = false
max_line_length = 100

# R files
[*.R]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# CSV files (no trailing whitespace trim)
[*.csv]
trim_trailing_whitespace = false
insert_final_newline = false

# Shell scripts
[*.sh]
indent_size = 2

# Makefiles
[Makefile]
indent_style = tab

# BibTeX files
[*.bib]
indent_size = 2
